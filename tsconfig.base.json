{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cypress/component-testing": [".component-testing/index.ts"],
      "@jscutlery-example/ng-shared/icon/shell": [
        "libs/ng-shared/icon/shell/src/index.ts"
      ],
      "@jscutlery-example/ng-shared/table/shell": [
        "libs/ng-shared/table/shell/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
